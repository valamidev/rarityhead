{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "sourceRoot": "src",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // ignore all test files
  ]
}